<div class="container">
	<div class="row">
		<div class="col-md-10 mx-auto text-left">
			<form>
				{{!-- POST --}}
				{{!-- title --}}
				<div class="mt-5 mb-3">
					<label for="createBlogPost" class="form-label">Title</label>
					<input class="form-control" id="titleInput">
				</div>

				{{!-- body --}}
				<div class="mb-3">
					<label for="createBlogPost" class="form-label">Body</label>
					<textarea class="form-control" id="bodyInput" rows="20"></textarea>
				</div>

				{{!-- OPTIONS --}}
				<div>
					{{!-- public --}}
					<div class="form-switch form-check form-check-inline">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
						<label class="form-check-label">Public</label>
					</div>

					{{!-- comments --}}
					<div class="form-switch form-check form-check-inline">
						<input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
						<label class="form-check-label" >Comments</label>
					</div>

					{{!-- submit Btn --}}
					<div class="text-right">
						<button type="submit" class="btn btn-primary">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>






