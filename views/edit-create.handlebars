<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto text-left">
            <h2>REVISE PAGE</h2>
            <form class="reviseBlogPost" data-id={{post.id}}>
                {{!-- POST --}}
                {{!-- title --}}
                <div class="mt-5 mb-3">
                    <label class="form-label">Title</label>
                    <input class="form-control" id="titleInput" maxlength="50" value="{{post.title}}">
                </div>
                {{!-- body --}}
                <div class="mb-3">
                    <label class="form-label">Body</label>
                    <textarea class="form-control" id="bodyInput" rows="10">{{post.post_body}}</textarea>
                </div>
                {{!-- OPTIONS --}}
                <div class="text-center">
                    {{!-- public --}}
                    <div class="form-switch form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" role="switch" id="isPublic" value="true" {{#if post.is_public}}checked{{/if}}>
                        <label class="form-check-label">Public</label>
                    </div>
                    {{!-- comments --}}
                    <div class="form-switch form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" role="switch" id="allowComments" value="true" {{#if post.allow_comments}}checked{{/if}}>
                        <label class="form-check-label">Comments</label>
                    </div>
                    {{!-- submit Btn --}}
                    <div class="text-center">
                        <button type="submit" class="text-center mt-3 btn btn-dark btn-lg btn-block">Submit</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="/js/editPostHandler.js"></script>