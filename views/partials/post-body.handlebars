{{!-- blog body --}}
<div class="container">
	<div class="row">
        <div class="col-md-10 mx-auto text-left mt-5">
            <h1>{{ post.title }}</h1>
            <p>Written by <strong>{{ post.user.username }}</strong> on <strong>{{ format_date post.createdAt }}</strong></p>
            <p>{{ post.post_body }}</p>
        </div>
    </div>
</div>

{{!-- comment --}}
{{#each post.comments as |comment|}}
<div class="container">
	<div class="row">
        <div class="col-md-10 mx-auto text-left mt-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{comment.user.username}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ format_date comment.createdAt}}</h6>
                    <p class="card-text">{{comment.comment_body}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}